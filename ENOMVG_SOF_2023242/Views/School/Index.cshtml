@using ENOMVG_SOF_2023242.Models
@model IEnumerable<School>

<!DOCTYPE <html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <title>Iskolák</title>
</head>
<body>
    <h1>Iskola áttekintő rendszer</h1>
        
    <table>
        <tr>
            <th>Címer</th>
            <th>Név</th>
            <th>Kor</th>
            <th>Diákok száma</th>
            <th>Tanárok száma</th>
            <th>Típus</th>
            <th>Műveletek</th>
        </tr>
        @foreach(var item in Model)
        {
            @:<tr>
                @:<td><img height="100" src="/images/@item.ImageFileName"/></td>
                @:<td>@item.Name</td>
                @:<td>@item.Age</td>
                @:<td>@item.Students.Count</td>
                @:<td>@item.Teachers.Count</td>
                @:<td>@item.Type</td>
                @:<td>
                @:    <a href="/school/delete?id=@item.Id">Delete</a>
                @:    <a href="/school/update?id=@item.Id">Update</a>
                @:</td>
            @:</tr>
        }
    </table>
    <a href="/school/create">Iskola hozzáadása</a>
</body>
</html>
