@using ENOMVG_SOF_2023242.Models
@model IEnumerable<Student>

@section head{
    <title>Diákok</title>
}

<h1>Diákok</h1>    
    <table>
        <tr>
            <th>Név</th>
            <th>Kor</th>
            <th>Átlag</th>
            <th>Iskola</th>
            <th>Műveletek</th>
        </tr>
        @foreach(var item in Model)
        {
            @:<tr>
                @:<td>@item.Id @item.Name</td>
                @:<td>@item.Age</td>
                @:<td>@item.GradesAVG</td>
                @:<td>@item.School.Name</td>
                @:<td>
                @:    <a href="/student/delete?id=@item.Id">Delete</a>
                @:    <a href="/student/update?id=@item.Id">Update</a>
                @:</td>
            @:</tr>
        }
    </table>
<a href="/student/create">Diák hozzáadása</a>
